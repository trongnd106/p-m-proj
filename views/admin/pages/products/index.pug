extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main 
    h1 Danh sách sản phẩm 

    .card.mb-3 
      .card-header Bộ lọc và tìm kiếm
      .card-body 
        .row 
          .col-6
            +filter-status(filterStatus)
          .col-6 
            +search(keyword)

    .card.mb-3 
      .card-header 
      .card-body 
        table.table.tabe-hover.table-sm 
          thead
            tr
              th STT 
              th Hình ảnh 
              th Tiêu đề
              th Giá
              th Trạng thái 
              th Hành động 
        
          tbody 
            each item, index in products
              tr 
                td #{index + 1}
                td 
                  img(
                      src=item.thumbnail
                      alt=item.title
                      width="100px"
                      height="auto"
                  )
                td #{item.title}
                td #{item.price}$
                td 
                  if(item.status === "active")
                    a(href="#" class="badge badge-success") Hoạt động
                  else 
                    a(href="#" class="badge badge-danger") Dừng hoạt động
                td 
                  button(class="btn btn-warning btn-sm") Sửa
                  button(class="btn btn-danger btn-sm ml-1") Xóa

    nav 
      ul(class="pagination")
        li(class="page-item")
          button(class="page-link") Trang trước 
        li(class="page-item")
          button(class="page-link") 1 
        li(class="page-item active")
          button(class="page-link") 2 
        li(class="page-item")
          button(class="page-link") 3 
        li(class="page-item")
          button(class="page-link") Kế tiếp   